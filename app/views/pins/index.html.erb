<p id="notice"><%= notice%></p>

<h1>Lista pinów</h1>
<div class="panel panel-default">
  <div class="panel-body">
<table>
 
  <thead>
    <tr>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     
    <% @pins.each do |pin| %>
      <tr>
        <td height="40"><%= pin.description %></td></tr>
        <tr>
        <td width="100" height="20"><%= link_to 'Pokaż', pin %></td>
        <% if pin.id==current_user %>
        <td width="100" height="20"><%= link_to 'Edytuj', edit_pin_path(pin) %></td>
        <td width="100" height="20"><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Jesteś tego pewien?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  </div>
  <div class="panel-footer"><%= link_to 'Nowy Pin', new_pin_path %></div>
</div>