<p id="notice"><%= notice%></p>

<h1>Lista pinów</h1>
<div class="panel panel-default">
  <div class="panel-body">
<table>
 
  <thead>
    <tr>
      <th>Obraz</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     
    <% @pins.each do |pin| %>
      <tr>
        <td> <% image_tag pin.image.url(:medium)%></td>
        <td height="40"><%= pin.description %></td>
        </tr>
        <tr>
        <td width="100" height="20"><%= link_to 'Pokaż', pin, class: 'btn btn-primary' %></td>
        <% if pin.user==current_user %>
        <td width="100" height="20"><%= link_to 'Edytuj', edit_pin_path(pin), class: 'btn btn-primary' %></td>
        <td width="100" height="20"><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Jesteś tego pewien?' }, class: 'btn btn-primary' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  </div>
  <div class="panel-footer"><%= link_to 'Nowy Pin', new_pin_path , class: 'btn btn-primary' %></div>
</div>